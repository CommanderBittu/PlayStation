    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const mainAddToCartButton = document.querySelector('.add-to-cart.main');
            const editionAddToCartButtons = document.querySelectorAll('.add-to-cart.edition');
            const checkoutButton = document.querySelector('.checkout-button');
    
            mainAddToCartButton.addEventListener('click', () => {
                const itemName = document.querySelector('.price h3').innerText;
                const itemPrice = document.querySelector('.price .cost h1').innerText;
                const item = {
                    name: itemName,
                    price: itemPrice
                };
                addToCart(item);
                alert('Item added to cart!');
            });
    
            editionAddToCartButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const itemName = button.closest('.diff-ed').querySelector('.det h1').innerText;
                    const itemPrice = button.closest('.diff-ed').querySelector('.cost h3').innerText;
                    const item = {
                        name: itemName,
                        price: itemPrice
                    };
                    addToCart(item);
                    alert('Item added to cart!');
                });
            });
    
            function addToCart(item) {
                let cart = JSON.parse(localStorage.getItem('cart')) || [];
                cart.push(item);
                localStorage.setItem('cart', JSON.stringify(cart));
                updateCartDisplay();
            }
    
            function updateCartDisplay() {
                let cart = JSON.parse(localStorage.getItem('cart')) || [];
                const cartDiv = document.querySelector('.cart-items');
                cartDiv.innerHTML = '';
                cart.forEach((item, index) => {
                    const itemDiv = document.createElement('div');
                    itemDiv.classList.add('cart-item');
                    itemDiv.innerHTML = `
                        <p>${item.name} - ${item.price}</p>
                        <button class="remove-button" data-index="${index}">Remove</button>
                    `;
                    cartDiv.appendChild(itemDiv);
                });
                attachRemoveEventListeners();
            }
    
            function attachRemoveEventListeners() {
                const removeButtons = document.querySelectorAll('.remove-button');
                removeButtons.forEach(button => {
                    button.addEventListener('click', () => {
                        const index = button.getAttribute('data-index');
                        let cart = JSON.parse(localStorage.getItem('cart')) || [];
                        cart.splice(index, 1);
                        localStorage.setItem('cart', JSON.stringify(cart));
                        updateCartDisplay();
                    });
                });
            }
    
            checkoutButton.addEventListener('click', () => {
                window.location.href = './checkout';
            });
    
            updateCartDisplay();
            const username = localStorage.getItem('username');
            if (username) {
                const signInButton = document.querySelector('.button a button');
                signInButton.textContent = username;
            }
        });
    </script>
    
